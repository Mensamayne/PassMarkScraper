# PassMark Scraper - Environment Variables Example
# Copy this file to .env and configure as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=9091

# Database
DB_PATH=benchmarks.db

# Scraping Configuration
USE_FULL_LISTS=true
INCLUDE_WORKSTATION=false

# Scheduler
SCHEDULER_ENABLED=false
SCHEDULER_TIME=03:00
SCHEDULER_DAYS=sunday
SCHEDULER_TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Backup
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP=true

# Development
DEBUG=false

